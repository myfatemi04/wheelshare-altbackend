datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  groups Group[] @relation(references: [id])
}

model Group {
  id     Int     @id @default(autoincrement())
  name   String
  users  User[]  @relation(references: [id])
  events Event[]
}

model Event {
  id      Int      @id @default(autoincrement())
  name    String
  groupId Int
  group   Group    @relation(fields: groupId, references: [id])
  endTime DateTime
}
