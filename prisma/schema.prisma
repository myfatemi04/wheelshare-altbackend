datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int           @id @default(autoincrement())
  email   String        @unique
  name    String?
  groups  Group[]       @relation(references: [id])
  signups EventSignup[]
}

model Group {
  id     Int     @id @default(autoincrement())
  name   String
  users  User[]  @relation(references: [id])
  events Event[]
}

model Event {
  id        Int      @id @default(autoincrement())
  name      String
  groupId   Int
  group     Group    @relation(fields: groupId, references: [id])
  startTime DateTime
  endTime   DateTime

  placeId          String
  formattedAddress String
  latitude         Float
  longitude        Float

  signups EventSignup[]
}

enum EventSignupType {
  GOING_CANDRIVE
  GOING_CANNOTDRIVE
  INTERESTED
  NOTGOING
}

model EventSignup {
  eventId Int
  event   Event @relation(fields: userId, references: [id])
  userId  Int
  user    User  @relation(fields: userId, references: [id])

  placeId          String
  formattedAddress String
  latitude         Float
  longitude        Float

  @@id([eventId, userId])
}
